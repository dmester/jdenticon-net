<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Condition="'$(TargetFrameworkVersion)' == 'v2.0'">
    <JdenticonPlatform>net20</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_ASSEMBLY_ATTRIBUTES;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFrameworkVersion)' == 'v3.5'">
    <JdenticonPlatform>net35</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_ASSEMBLY_ATTRIBUTES;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFrameworkVersion)' == 'v4.0'">
    <JdenticonPlatform>net40</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_ASSEMBLY_ATTRIBUTES;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFrameworkVersion)' == 'v4.5'">
    <JdenticonPlatform>net45</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_ASSEMBLY_ATTRIBUTES;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFrameworkVersion)' == 'v4.5.1'">
    <JdenticonPlatform>net451</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_ASSEMBLY_ATTRIBUTES;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.0'">
    <JdenticonPlatform>netstandard10</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);USE_SHARP_COMPRESS;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <JdenticonPlatform>netstandard13</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.6'">
    <JdenticonPlatform>netstandard16</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <JdenticonPlatform>netstandard20</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <JdenticonPlatform>netstandard21</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT;SUPPORT_NULLABLE_REFERENCE_TYPES</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netcoreapp3.0'">
    <JdenticonPlatform>netcore30</JdenticonPlatform>
    <DefineConstants>$(DefineConstants);HAVE_COMPRESSION_LEVEL;HAVE_CRYPTO_CONFIG;HAVE_FILE_STREAM;HAVE_HASH_ALGORITHMS;HAVE_EXTENDED_COMPONENTMODEL;HAVE_MEMORYSTREAM_GETBUFFER;SUPPORT_ASYNC_AWAIT;SUPPORT_NULLABLE_REFERENCE_TYPES</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <!-- For DeterministicSourcePaths -->
    <SourceRoot Include="$(SolutionDir)"/>
  </ItemGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DeterministicSourcePaths>true</DeterministicSourcePaths>
    <EmbedAllSources>true</EmbedAllSources>
    <DebugSymbols>true</DebugSymbols>
    <!-- Only portable pdbs are supported by NuGet -->
    <!-- https://docs.microsoft.com/en-us/nuget/create-packages/symbol-packages-snupkg#nugetorg-symbol-package-constraints -->
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <Target Name="CopyAssembly" AfterTargets="Build">
    <Copy
        SourceFiles="$(TargetPath)"
        DestinationFolder="$(SolutionDir)\releases\Jdenticon.$(AssemblyVersion)\$(JdenticonPlatform)"
    />
    <Copy
        SourceFiles="$(TargetDir)$(TargetName).pdb"
        DestinationFolder="$(SolutionDir)\releases\Jdenticon.$(AssemblyVersion)\$(JdenticonPlatform)"
    />
  </Target> 
</Project>